@{
    ViewData["Title"] = "Exams";
}

@model ExamModel

@{
    if (Model.Id == 0)
    {
        <h2>Add Exam</h2>
    }
    else
    {
        <h2>Update Exam</h2>
    }
}
<form asp-controller="Exam" asp-action="Save">
    <input asp-for="Id" hidden/>

    <div class="form-group">
        <label asp-for="SubjectCode">Subject code:</label>
        <input type="text" class="form-control" asp-for="SubjectCode">
        <span asp-validation-for="SubjectCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentNumber">Student number:</label>
        <input type="number" class="form-control" asp-for="StudentNumber">
        <span asp-validation-for="StudentNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input type="date" class="form-control" asp-for="Date" value="@Model?.Date.ToString("yyyy-MM-dd")">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Grade">Grade:</label>
        <input type="number" class="form-control" asp-for="Grade">
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}